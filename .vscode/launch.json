    "version": "0.2.0",
    "configurations": [
        {
            "name": "FastAPI: Uvicorn",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/venv/bin/uvicorn",
            "args": [
                "main:app",
                "--reload",
                "--host", "0.0.0.0",
                "--port", "80"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/app",
            "pythonPath": "${workspaceFolder}/venv/bin/python",
            "env": {
                "PYTHONUNBUFFERED": "1"
            },
        }
    ]
}